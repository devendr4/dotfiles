{
  //format
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "markdown",
    "javascript",
    "graphql",
    "html",
    "yaml",
    "ruby",
    "eruby",
    "json",
    "python",
    "typescript",
    "javascriptreact",
    "typescriptreact"
  ],
  //python
  "python.linting.enabled": true,
  //explorer
  "explorer.width": 30,
  "explorer.icon.enableNerdfont": true,
  "explorer.previewAction.onHover": false,
  //ruby
  "solargraph.formatting": true,
  "eslint.autoFixOnSave": true
}
